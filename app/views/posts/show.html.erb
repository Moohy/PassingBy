<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<% if !@post.image.nil? && @post.image.attached? && @post.image.representable? %>
  <%= image_tag(@post.image, size: '250x250') %> 
<%end%>

<p>
  <strong>City:</strong>
  <%= @post.city %>
</p>

<p>Likes: <%=@post.likes.count%></p>

<%= link_to "Like", post_like_path(@post.id), method: :post %>
<%= link_to "Unlike", post_unlike_path(@post.id), method: :delete %>

<div>
  <strong>Comments:</strong>
  <% @post.comments.each do |comment|%>
  <p><%= comment.text %></p>
  <%end%>
</div>

<%= render  "comment_form", comment: @comment, post: @post%>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
